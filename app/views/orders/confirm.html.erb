<div id="checkout_page">
  <h1>Confirm Your Order</h1>
  <div id="cart_panel">
    <h2>Your Cart</h2>
    <%= render partial: 'carts/item', collection: current_cart.line_items %>
    <%= render partial: 'shared/tax',:locals =>{:products => current_cart.line_items} %>
    <a href="#" class="button" id="form_handle">Make Payment</a>
  </div>
  <div id="form_panel">
<p id="notice"><%= notice %></p>
  <p>
    <b>First name:</b>
    <%= @order.first_name %>
  </p>

  <p>
    <b>Last name:</b>
    <%= @order.last_name %>
  </p>

  <p>
    <b>Email:</b>
    <%= @order.email %>
  </p>

  <p>
    <b>Address:</b>
    <%= @order.address %>
  </p>

  <p>
    <b>Address2:</b>
    <%= @order.address2 %>
  </p>

  <p>
    <b>City:</b>
    <%= @order.city %>
  </p>

  <p>
    <b>State:</b>
    <%= @order.state %>
  </p>

  <p>
    <b>Zip:</b>
    <%= @order.zip %>
  </p>

  <p>
    <b>Shipping method:</b>
    <%= @order.shipping_method %>
  </p>

  <p>
    <b>Billing address:</b>
    <%= @order.billing_address %>
  </p>

  <p>
    <b>Billing address2:</b>
    <%= @order.billing_address2 %>
  </p>

  <p>
    <b>Billing city:</b>
    <%= @order.billing_city %>
  </p>

  <p>
    <b>Billing state:</b>
    <%= @order.billing_state %>
  </p>

  <p>
    <b>Billing zip:</b>
    <%= @order.billing_zip %>
  </p>
  <p>
    <b>Credit card Number:</b>
    <%= @order.credit_card_number %>
  </p>
  <p>
    <b>Credit card expiry date:</b>
    <%= @order.exp_date %>
  </p>
  <p>
    <b>Credit card verification number:</b>
    <%= @order.ccv_number %>
  </p>
  </div>

  <div class="">
    <%= form_for @order, :url => {:action => "payment"} do |f| %>
      <%= f.hidden_field :first_name%>
      <%= f.hidden_field :last_name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :address2 %>
      <%= f.hidden_field :city %>
      <%= f.hidden_field :state %>
      <%= f.hidden_field :zip %>
      <%= f.hidden_field :shipping_method_id %>
      <%= f.hidden_field :billing_address %>
      <%= f.hidden_field :billing_address2 %>
      <%= f.hidden_field :billing_city %>
      <%= f.hidden_field :billing_state %>
      <%= f.hidden_field :billing_zip %>
      <%= f.hidden_field :credit_card_number %>
      <%= f.hidden_field :exp_date %>
      <%= f.hidden_field :ccv_number %>
      <%= f.hidden_field :total_amount, {:value =>total_amount_with_tax(current_cart.line_items,@order.state)} %>
    <%end%>
  </div>
</div>