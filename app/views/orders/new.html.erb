<div id="checkout_page">
	<h1>Checkout</h1>
	<div id="cart_panel">
		<h2>Your Cart</h2>
  		<%= render partial: 'carts/item', collection: current_cart.line_items %>
	</div>
	<div id="account_panel" style='float:left; padding: 20px; padding-right: 200px; background-color:#E0F2F7;'>
		<% unless current_account %>
			<h2>Already have an account?</h2>
			<%=render "sign_in_form"%>
		<%else%>
			<h2>Signed in as <%=current_account.email%></h2>
		<%end%>
	</div>
	<div id="form_panel" style='float:right;'>
		<br /><br />
		<%= render 'form' %>
	</div>
</div>