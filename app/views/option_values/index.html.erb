<h1>Listing option_values</h1>

<table>
  <tr>
    <th>Option</th>
    <th>Name</th>
    <th>Price</th>
    <th>Order num</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @option_values.each do |option_value| %>
  <tr>
    <td><%= option_value.option_id %></td>
    <td><%= option_value.name %></td>
    <td><%= option_value.price %></td>
    <td><%= option_value.order_num %></td>
    <td><%= link_to 'Show', option_value %></td>
    <td><%= link_to 'Edit', edit_option_value_path(option_value) %></td>
    <td><%= link_to 'Destroy', option_value, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

