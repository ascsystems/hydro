<footer class="clear">
	<div class="wrapper">
			<%#= render partial: "static_pages/home_content" %>
		<div id="footerWrapper">
			<div class="panel fifty_percent">
				<div id="footer-nav-div" class="inner-panel left">
					<nav>
						<ul id="footer-nav">
							<li><%= link_to "Contact", page_path('contact-hydro-flask') %></li>
							<li><%= link_to "About Hydro Flask", page_path('about-hydro-flask') %></li>
							<li><%= link_to "FAQs", page_path('frequently-asked-questions') %></li>
							<li><%= link_to "Lifetime Warranty", page_path('lifetime-warranty') %></li>
							<li><%= link_to "Shipping & Handling", page_path('shipping-and-handling') %></li>
							<li><%= link_to "Returns", page_path('returns') %></li>
							<li><%= link_to "Careers", page_path('careers') %></li>
						</ul>
					</nav>
				</div>
				<div id="footer-email-updates" class="inner-panel left">
					<h3>EMAIL UPDATES</h3>
					<p>Get the latest news from Hydro Flask!</p>
					<form>
						<div class="form-row">
							<%# FIXME: not working! (rendering blank "form" tag in html) %>
							<%#= form_tag(subscribe_email_path, :method = 'post') do |f| %>
							<%= form_for(EmailSubscription.new, {:url => subscribe_email_path(), :html=> {:class => 'new_email_subscription_footer', :id=>"new_email_subscription_footer"}}) do |f| %>		
								<div class="field">
									<%= f.text_field :email_address, :placeholder => "Enter email address" %>
									<%= f.submit "Submit Email", :type => :image, :src => asset_path("submit_button.png"), :name => 'subscribe_email', :id => 'submit_email_sub'%>
								</div>
							<% end %>
							<!-- old code
							<input type="text" value="Enter email address" id="footer_email_box" />
							<input type="image" src="<%#= asset_path "submit_button.png" %>" />
							-->
						</div>
					</form>
				</div>
				<div id="footer-copy" class="clear">
					<p>
						&copy; <%= Time.now.year %> Hydro Flask. All prices are in USD.<br />
						<%= link_to "Terms & Privacy", page_path('terms-and-privacy') %>&nbsp;|&nbsp;<%= link_to "Sitemap", page_path('sitemap') %>
					</p>
				</div>
			</div>
			<div class="panel fifty_percent">
				<div class="inner-panel left">
					<h3>SOCIAL</h3>
					<p>Stay current on the Hydro Flask world!</p>
					<nav id="footer-social-nav">
						<ul>
							<li><a href="https://twitter.com/HydroFlask" target="_blank"><%= image_tag "twitter_square.png", alt: "Hydro Flask on Twitter" %></a></li>
							<li><a href="http://www.facebook.com/hydroflask?ref=mf" target="_blank"><%= image_tag "facebook_square.png", alt: "Hydro Flask on Facebook" %></a></li>
							<li><a href="http://www.instagram.com/hydroflask" target="_blank"><%= image_tag "instagram_square.png", alt: "Hydro Flask on Instagram" %></a></li>
							<li><a href="http://www.pinterest.com/hydroflask" target="_blank"><%= image_tag "pinterest_square.png", alt: "Hydro Flask on Pinterest" %></a></li>
							<li><a href="http://blog.hydroflask.com" target="_blank"><%= image_tag "rss_square.png", alt: "Hydro Flask Feedburner" %></a></li>
						</ul>
					</nav>
					<div id="hman-div" class="clear">
						<%= image_tag "h_man.png", id: "h_man" %>
						<h3>H-MAN</h3>
						<p>Meet the heart &amp; soul of Hydro Flask!</p>
					</div>
				</div>
				<div class="inner-panel left">
					<h3>SEARCH</h3>
					<p>Find info on the Hydro Flask site.</p>
					<form>
						<div class="form-row">
							<input type="text" value="Search" id="footer_search_box"/><input type="image" src="<%= asset_path "search_button.png" %>" />
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</footer>
