<header>
	<div class="wrapper<% if current_page? root_url %> home_wrapper no-background<% end %>">
		<div id="headerWrapper">
			<div id="logo">
				<%= link_to image_tag("hydroflask_logo.png", alt: "Hydro Flask"), root_url %>
			</div>
			<nav id="homepage-nav">
				<ul>
					<li><%= link_to "SHOP", shop_path %>
						<ul>
							<%= render partial: 'layouts/category', collection: header_categories %>
						</ul>
					</li>
					<li><%= link_to "HYDRO FLASK", page_path('hydro-flask-technology') %></li>
					<li><%= link_to "SOCIAL", page_path('hydro-flask-social') %></li>
					<li><%= link_to "5% BACK", page_path("5-back") %></li>
					<li><%= link_to "CONTACT", page_path("contact-hydro-flask") %></li>
					<li>|</li>
					<% if current_account.present? %>
						<li><%= link_to "My Account", account_path(current_account.id) %></li>
						<li><%= link_to "SIGN OUT", destroy_account_session_path, :method => :delete %></li>
					<%else%>
						<li><%= link_to "SIGN IN", new_account_session_url %></li>
					<%end%>
					<li><%= link_to "CART (#{items_in_cart})", mycart_path, class: "primary-color" %><div id="cart-img"></div></a></li>
				</ul>
			</nav>
		</div>
	</div>
</header>