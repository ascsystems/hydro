<div id="category_content">
  <h1>SHOP</h1>
  <div id="breadcrumb"></div>
  <% @categories.each do |category| %>
      <h2><%= category.name %></h2>
      <div class="category_row">
        <% category.products.each do |product| %>
        <div class="category_product">
          <div><%= image_tag "/images/product/default.png", alt: product.name, title: product.name %></div>
          <h3><%= product.name %></h3>
          <div>
            <div><%= product.price %></div>
            <div>Star Rating</div>
          </div>
          <div>
            Colors here
          </div>
        </div>
        <% end %>
      </div>
  <% end %>
</div>