
<div id="page" class="social">
  <div id="breadcrumb"><%= link_to "Home", root_url %> &raquo; Hydro Flask Social</div>
  <h1>Hydro Flask Social</h1>
  <div class="left_content">
    <%#= image_tag "post-content.png", alt: "Post Content", title: "Post Content", id: "add_content" %>
    <h3>JOIN US</h3>
    <ul id="join_us">
      <li><a href="https://twitter.com/HydroFlask" target="_blank"><%= image_tag "https://s3.amazonaws.com/hydroflask/images/twitter_square.png", alt: "Hydro Flask on Twitter" %><div>TWITTER</div></a></li>
      <li><a href="http://www.facebook.com/hydroflask?ref=mf" target="_blank"><%= image_tag "https://s3.amazonaws.com/hydroflask/images/facebook_square.png", alt: "Hydro Flask on Facebook" %><div>FACEBOOK</div></a></li>
      <li><a href="http://www.instagram.com/hydroflask" target="_blank"><%= image_tag "https://s3.amazonaws.com/hydroflask/images/instagram_square.png", alt: "Hydro Flask on Instagram" %><div>INSTAGRAM</div></a></li>
      <li><a href="http://www.pinterest.com/hydroflask" target="_blank"><%= image_tag "https://s3.amazonaws.com/hydroflask/images/pinterest_square.png", alt: "Hydro Flask on Pinterest" %><div>PINTEREST</div></a></li>
      <li><a href="http://blog.hydroflask.com" target="_blank"><%= image_tag "https://s3.amazonaws.com/hydroflask/images/rss_square.png", alt: "Hydro Flask Feedburner" %><div>BLOG</div></a></li>
    </ul>
  </div>
  <div class="right_content">
      <% @articles.each do |a| %>
        <div class="article">
          <h2><%= link_to a['title'], a['permalink'], target: "_blank" %></h2>
          <p class="shared_by"><span>Shared by: </span><span class="shared_by_name"><% if !a['avatar'].blank? %><%= image_tag a['avatar'] %><% end %><%= a['author'] %></span></p>
          <p class="posted"><%= a['article_date'].strftime("%d %B %Y") %></p>
          <% if !a['thumbnail'].blank? && a['thumbnail'] != "http://storify.com/public/img/default-thumb.gif" %><p class="image"><%= image_tag a['thumbnail'], alt: a['title'], title: a['title'] %></p><% end %>
          <p class="content"><%= if a['image_caption'].blank?
              if a['quote'].blank?
                if a['video'].blank?
                  a["description"]
                else
                  a['video']
                end
              else 
                a['quote']
              end
            else
              a['image_caption']
            end 
          %></p>
          <p class="share"><span class="share_text">SHARE:</span><a class="addthis_button_facebook_like" addthis:url="<%= a['shortlink'] %>" addthis:title="<%= a['title'] %>" fb:like:layout="button_count"></a> <a class="addthis_button_tweet" addthis:url="<%= a['shortlink'] %>" addthis:title="<%= a['title'] %>"></a> <a class="addthis_button_google_plusone" addthis:url="<%= a['shortlink'] %>" addthis:title="<%= a['title'] %>" g:plusone:size="medium"></a><a class="addthis_button_pinterest_pinit" addthis:url="<%= a['shortlink'] %>" addthis:title="<%= a['title'] %>"></a></p>
        </div>
      <% end %>
  </div>
  <div id="add_content_dialog" style="display:none;">
    <%= render 'form' %>
  </div>
</div>
<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=xa-51d8b57643b8a401"></script>
