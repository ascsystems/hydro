</ul>
<%= form_for(@social) do |f| %>
  <% if @social.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@social.errors.count, "error") %> prohibited this social from being saved:</h2>

      <ul>
      <% @social.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= label_tag "First Name:" %><br>
    <%= text_field_tag "first_name" %>
  </div>
  <div class="field">
    <%= label_tag :last_name, "Last Name:" %><br>
    <%= text_field_tag "last_name" %>
  </div>
  <div class="field">
    <%= f.label :title, "Post Title:" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :thumbnail, "Choose Photo:" %><br>
    <%= f.file_field :thumbnail %>
  </div>
  <div class="field">
    <%= f.label :description, "Tell Us About Your Photo" %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <div class="field">
    <%= check_box_tag "terms" %> I've read and agree to the <%= link_to "Terms & Privacy", page_path('terms-and-privacy') %>
  </div>
<% end %>
