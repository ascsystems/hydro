<div id='hydro_account_panel'>
<h2>Sign up</h2>


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row"><%= f.label :email %><br />
  <%= f.text_field :email, :autofocus => true, placeholder: "youremail@domain.com" %></div>

  <div class="row"><%= f.label :password, "Password*" %><br />
  <%= f.password_field :password %></div>

  <div class="row"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>
  <p>*Password must be at least 8 characters.</p>
  <%= f.submit "SIGN UP" %>
<% end %>

<br/>
<%= render "devise/shared/links" %>
</div>